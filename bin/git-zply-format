#!/bin/bash
# Analagous to `git format-patch`
VERSION=0.1

function version() {
    echo $VERSION
    exit 0
}

function die() {
    >&2 echo $@
    exit 1
}

function usage() {
    die "usage: git zply-format [-h] [-v] <output-path> <since>"
}

while getopts 'hv' opt; do
    case $opt in
        h) usage;;
        v) version;;
        *) usage;;
    esac
done

shift $(($OPTIND - 1))
if [[ -z $1 ]] || [[ -z $2 ]]; then
    usage
fi

FORMAT_PATH=$1
SINCE=$2

echo "Formatting patches..."
git format-patch -kpo $FORMAT_PATH $SINCE > /dev/null || die "git format-patch failed"

for patch in `ls $FORMAT_PATH/*.patch`; do
    git zply-fixup $patch > $patch.tmp || die "git zply-fixup failed"
    mv $patch.tmp $patch
done
